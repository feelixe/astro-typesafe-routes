---
import { Container } from "../components/ui/container.tsx";
import DefaultLayout from "../layouts/default-layout.astro";
import { Button } from "../components/ui/button.tsx";
import { ChevronRightIcon } from "lucide-react"
import { Separator } from "../components/ui/separator.tsx";
import { Card, CardDescription, CardHeader, CardTitle } from "../components/ui/card.tsx";
import { CodeBlock, Code, Caret, AutocompletePopup, AutocompletePopupLine } from "../components/showcase/code-block.tsx";
---

<DefaultLayout>
  <Container className="mt-10 max-w-3xl">
    <CodeBlock className="max-w-lg mx-auto mb-16">
      <Code c="darkGreen">---</Code>
      <br />
      <Code c="pink">import</Code>
      <Code c="blue">Link</Code>
      <Code c="pink">from</Code>
      <Code c="orange">"astro-typesafe-routes/link"</Code><Code c="white">;</Code>
      <br />
      <Code c="darkGreen">---</Code>
      <br />
      <br />
      <div class="relative">
        <Code c="gray">&lt;</Code><Code c="green">Link</Code>
        <Code c="blue">to</Code><Code c="white">=</Code><Code c="orange">"</Code><Caret />
        <AutocompletePopup className="absolute top-7 left-22">
          <AutocompletePopupLine active>/</AutoCompletePopupLine>
          <AutocompletePopupLine>/blog</AutoCompletePopupLine>
          <AutocompletePopupLine>/blog/[slug]</AutoCompletePopupLine>
        </AutocompletePopup>
      </div>
      &nbsp;&nbsp;<Code c="white">Blog</Code>
      <br />
      <Code c="gray">&lt;/</Code><Code c="green">Link</Code><Code c="gray">&gt;</Code>
    </CodeBlock>

    <h1 class="text-4xl font-semibold mb-3 text-center">Typesafe Routing for Astro Projects</h1>
    <p class="mb-4 text-center">
      Enhance your Astro development experience with rigorous type safety
      for every route in your application. This integration automatically
      generates TypeScript definitions from your project's route structure.
    </p>

    <div class="flex gap-2 items-center justify-center">
      <Button size="sm">
        Installation
        <ChevronRightIcon className="size-4" />
      </Button>
      <Button size="sm" variant="secondary">
        Usage
      </Button>
    </div>

    <Separator className="my-12" />

    <h2 class="text-3xl font-semibold mb-4">Features</h2>
    <div class="grid gap-3 grid-cols-2">
      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ›Ÿ Typesafe
          </CardTitle>
          <CardDescription>
            Ensures all URLs match a route in your Astro project.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ”— Link Component
          </CardTitle>
          <CardDescription>
            Replace your anchor links with the typesafe Link component.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ”Ž Typesafe Search Params
          </CardTitle>
          <CardDescription>
            Support for typesafe and JSON serialized search params.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ¤¸ Zero Dependencies
          </CardTitle>
          <CardDescription>
            No 3rd-party packages.
          </CardDescription>
        </CardHeader>
      </Card>
    </div>
  </Container>
</DefaultLayout>
