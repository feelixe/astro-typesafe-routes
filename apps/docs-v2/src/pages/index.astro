---
import { Container } from "../components/ui/container.tsx";
import DefaultLayout from "../layouts/default-layout.astro";
import { LinkButton } from "../components/ui/button.tsx";
import { ChevronRightIcon } from "lucide-react"
import { Separator } from "../components/ui/separator.tsx";
import { Card, CardDescription, CardHeader, CardTitle } from "../components/ui/card.tsx";
import { CodeDisplay } from "../components/showcase/code-display.tsx";
---

<DefaultLayout>
  <Container className="mt-2 sm:mt-10 max-w-3xl overflow-x-hidden">
    <CodeDisplay client:load />

    <h1 class="text-4xl font-semibold mb-3 text-center">Typesafe Routing for Astro Projects</h1>
    <p class="mb-4 text-center">
      Enhance your Astro development experience with rigorous type safety
      for every route in your application. This integration automatically
      generates TypeScript definitions from your project's route structure.
    </p>

    <div class="flex gap-2 items-center justify-center">
      <LinkButton to="/documentation" size="sm">
        Installation
        <ChevronRightIcon className="size-4" />
      </LinkButton>
      <LinkButton to="/documentation/usage/link" size="sm" variant="secondary">
        Usage
      </LinkButton>
    </div>

    <Separator className="my-12" />

    <h2 class="text-3xl font-semibold mb-4">Features</h2>
    <div class="grid gap-3 grid-cols-2">
      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ”’ Typesafe
          </CardTitle>
          <CardDescription>
            Ensures all URLs match a route in your Astro project.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ”— Link Component
          </CardTitle>
          <CardDescription>
            Replace your anchor links with the typesafe Link component.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ”Ž Typesafe Search Params
          </CardTitle>
          <CardDescription>
            Support for typesafe and JSON serialized search params.
          </CardDescription>
        </CardHeader>
      </Card>

      <Card>
        <CardHeader>
          <CardTitle>
            ðŸ¤¸ Zero Dependencies
          </CardTitle>
          <CardDescription>
            No 3rd-party packages.
          </CardDescription>
        </CardHeader>
      </Card>
    </div>
  </Container>
</DefaultLayout>
