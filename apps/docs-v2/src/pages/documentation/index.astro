---
import { Button } from "../../components/ui/button.tsx";
import { Container } from "../../components/ui/container.tsx";
import { Separator } from "../../components/ui/separator.tsx";
import DefaultLayout from "../../layouts/default-layout.astro";
import InstallationDocs from "./_index.md"
import { ChevronRightIcon } from "lucide-react"
import { Sidebar, SidebarContent, SidebarWrapper } from "@/components/page/sidebar.tsx"
---

<DefaultLayout>
  <Container className="markdown">
    <SidebarWrapper>
      <Sidebar client:load activeRouteId="/documentation" />
      <SidebarContent>
        <InstallationDocs />
        <Separator className="my-6" />
        <div class="flex items-center">
          <div class="grow" />
          <Button>Link Component <ChevronRightIcon className="size-4" /></Button>
        </div>
      </SidebarContent>
    </SidebarWrapper>
  </Container>
</DefaultLayout>
