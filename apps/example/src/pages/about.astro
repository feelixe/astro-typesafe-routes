---
import { getSearch } from "astro-typesafe-routes";
import Link from "astro-typesafe-routes/link";
import { z } from "astro/zod";

export const searchSchema = z.object({
  name: z.string(),
  page: z.number().int(),
});

const search = getSearch(Astro, searchSchema);
---

<Link to="/">Hit me!</Link>

{search}