---
import type { HTMLAttributes } from "astro/types";
import { $path, type RouteOptions } from "../../../path";

export type Props = Omit<HTMLAttributes<"a">, "href"> & RouteOptions;

const {
  to,
  params,
  search,
  searchParams,
  hash,
  trailingSlash,
  ...anchorProps
} = Astro.props;

const href = $path({ to, params, search, searchParams, hash, trailingSlash });
---

<a href={href} {...anchorProps}>
  <slot />
</a>
